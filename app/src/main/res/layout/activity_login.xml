<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:gravity="center"
    android:padding="24dp">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <!-- LOGO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sécurité :"
            android:textSize="60sp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_money_management"
            android:layout_marginBottom="8dp"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionnaire Budget Pro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gérez votre argent intelligemment"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- FORMULAIRE DE CONNEXION -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"/>

            <!-- EMAIL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="votre@email.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- MOT DE PASSE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editMotDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@android:color/white"
                android:layout_marginBottom="20dp"/>

            <!-- BOUTON CONNEXION -->
            <Button
                android:id="@+id/btnConnexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:padding="14dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- INSCRIPTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textVersInscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas encore de compte ?"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnInscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'inscrire"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <!-- SPACER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- FOOTER -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2026 - Développé par Njanga"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="16dp"/>

</LinearLayout>
