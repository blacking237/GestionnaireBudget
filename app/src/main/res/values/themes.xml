<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Thème principal de l'application -->
    <style name="Theme.GestionnaireBudget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorPrimaryVariant">@color/soft_navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/soft_navy</item>
    </style>

    <!-- STYLE TITRE DE CATÉGORIE -->
    <style name="CategorieTitre">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>
